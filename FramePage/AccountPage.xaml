<Page
    x:Class="Social.FramePage.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Social.FramePage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Social.Model"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
   
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState 
                            x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger 
                                        MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter 
                                Target="View.(Visibility)"
                                Value="Collapsed"/>
                        <Setter 
                                Target="InsideFrame.(Orientation)" 
                                Value="Horizontal"/>
                        <Setter 
                                Target="Editbt.(Visibility)" 
                                Value="Collapsed"/>
                        <Setter 
                                Target="Deletebt.(Visibility)" 
                                Value="Collapsed"/>
                        <Setter 
                                Target="GoAccount.(Visibility)"
                                Value="Collapsed"/>
                        <Setter 
                                Target="GoBack.(Visibility)"
                                Value="Visible"/>
                        <Setter 
                                Target="Intro.(Visibility)"
                                Value="Visible"/>

                    </VisualState.Setters>
                </VisualState>
                <VisualState 
                            x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger 
                                        MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter 
                                Target="ButtonStack.(Visibility)"
                                Value="Visible"/>
                        <Setter
                                Target="Intro.(Margin)"
                                Value="50"/>
                        <Setter
                                Target="Intro.(Visibility)"
                                Value="Visible"/>
                        <Setter 
                                Target="GoBack.(Visibility)"
                                Value="Collapsed"/>
                        <Setter 
                                Target="GoAccount.(Visibility)"
                                Value="Visible"/>
                        <Setter 
                                Target="View.(Visibility)"
                                Value="Visible"/>
                        <Setter 
                                Target="InsideFrame.(Visibility)" 
                                Value="Collapsed"/>
                        <Setter 
                                Target="InsideFrame.(Orientation)" 
                                Value="Horizontal"/>
                        <Setter 
                                Target="InsideFrame.(Width)" 
                                Value="500"/>
                        
                        <Setter 
                                Target="Option.(Visibility)" 
                                Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid Grid.Column="0" Background="{ThemeResource PaneBack}">
            
            
            
            <StackPanel 
                        x:Name="ButtonStack" 
                        HorizontalAlignment="Left"  
                        VerticalAlignment="Top" 
                        Background="Transparent">
                <Button 
                        x:Name="GoBack" 
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE0A6;"  
                        Background="Transparent"
                        Foreground="{ThemeResource TextColor}" 
                        Click="GoBack_Click" 
                        ClickMode="Press"/>
                <Button     
                         x:Name="GoAccount" 
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE0A6;"  
                        Background="Transparent"
                        Foreground="{ThemeResource TextColor}" 
                        Click="GoAccount_Click" 
                        ClickMode="Press"/>
                <Button
                        x:Name="Editbt" 
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE104;"                       
                        Foreground="{ThemeResource TextColor}"
                        Click="Editbt_Click"
                        Visibility="Collapsed"
                        Background="Transparent"
                        ClickMode="Press"/>
                <Button 
                        x:Name="Deletebt" 
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE107;"
                        Visibility="Collapsed"
                        Background="Transparent"
                        Foreground="{ThemeResource TextColor}"
                        Click="Deletebt_Click" 
                        ClickMode="Press"/>
                <Button
                        x:Name="SignOut"
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE7E8;"
                        Foreground="{ThemeResource TextColor}"
                        Background="Transparent"
                        VerticalAlignment="Bottom"
                        ClickMode="Press"
                        Click="SignOut_Click"/>
            </StackPanel>
        </Grid>
        <Image Style="{ThemeResource Ima}" Grid.Column="1"/>
        <StackPanel
                    Grid.Column="1" 
                    Orientation="Horizontal"
                    Background="Transparent" >
            <StackPanel
                        x:Name="Intro"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"    
                        Margin="50"          
                        >
             

                <RelativePanel>

                   <!-- <Ellipse 
                            Width="220"
                            Height="220"
                            x:Name="Icon">
                        <Ellipse.Fill>
                            <ImageBrush  
                                        ImageSource="/Assets/male-03.png"/>
                        </Ellipse.Fill>
                    </Ellipse>-->
                    <PersonPicture 
                                    Width="220"
                                     Height="220"
                                    Name="ProfilePic"
                                    
                                         />

                    <StackPanel RelativePanel.Below="ProfilePic">
                        <RelativePanel>

                            <TextBlock 
                                        x:Name="UNTB" 
                                        Text="User Name" 
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150" 
                                        Margin="0,10,10,0" 
                                        FontSize="20" />
                            <TextBlock 
                                        x:Name="UserNameBlock"
                                        FontSize="20"
                                        RelativePanel.RightOf="UNTB"
                                        Foreground="{ThemeResource TextColor}"
                                        Margin="0,10,10,0"/>
                            <TextBlock 
                                        x:Name="LNTB" 
                                        Text="Last Name"
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150" 
                                        RelativePanel.Below="UNTB"
                                        Margin="0,10,10,0" 
                                        FontSize="20"/>
                            <TextBlock 
                                        x:Name="LastNameBlock"
                                        FontSize="20" 
                                        Foreground="{ThemeResource TextColor}"
                                        RelativePanel.Below="UserNameBlock"
                                        RelativePanel.RightOf="LNTB"
                                        Margin="0,10,10,0"/>
                            <TextBlock 
                                        x:Name="GenderTB" 
                                        Text="Gender"
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150" 
                                        RelativePanel.Below="LNTB"
                                        Margin="0,10,10,0" 
                                        FontSize="20"/>
                            <TextBlock
                                        x:Name="GenderBlock"
                                        FontSize="20"
                                        Foreground="{ThemeResource TextColor}"
                                        RelativePanel.Below="LastNameBlock"
                                        RelativePanel.RightOf="GenderTB"
                                        Margin="0,10,10,0"/>
                            <TextBlock 
                                        x:Name="USIDTB" 
                                        Text="User Id" 
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150" 
                                        RelativePanel.Below="GenderTB" 
                                        Margin="0,10,10,0" 
                                        FontSize="20"/>
                            <TextBlock 
                                        x:Name="UserIDBlock"                                            
                                        FontSize="20"
                                        Foreground="{ThemeResource TextColor}"
                                        Margin="0,10,10,0"
                                        RelativePanel.Below="GenderBlock"
                                        RelativePanel.RightOf="USIDTB"/>
                            <TextBlock 
                                        x:Name="EmailTB" 
                                        Text="Email" 
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150"
                                        RelativePanel.Below="USIDTB" 
                                        Margin="0,10,10,0"
                                        FontSize="20"/>
                            <TextBlock 
                                        x:Name="EmailBlock"
                                        FontSize="20"
                                        Foreground="{ThemeResource TextColor}"
                                        RelativePanel.RightOf="EmailTB"                                  
                                        RelativePanel.Below="UserIDBlock"
                                        Margin="0,10,10,0"/>
                            <TextBlock 
                                        x:Name="BirthTB" 
                                        Text="Birthday" 
                                        Foreground="{ThemeResource TextColor}"
                                        Width="150" 
                                        RelativePanel.Below="EmailTB" 
                                        Margin="0,10,10,0" 
                                        FontSize="20"/>
                            <TextBlock 
                                        x:Name="BirthdayBlock"
                                        FontSize="20"
                                        Foreground="{ThemeResource TextColor}" 
                                        RelativePanel.RightOf="BirthTB"
                                        RelativePanel.Below="EmailBlock"
                                        Margin="0,10,10,0"/>
                            <HyperlinkButton 
                                            x:Name="View"
                                            Content="View my post"
                                            Foreground="MediumSlateBlue"
                                            FontSize="18" 
                                            HorizontalAlignment="Center"
                                            Margin="80,10,20,10"
                                            RelativePanel.Below="BirthTB"
                                            Click="View_Click"/>
                        </RelativePanel>

                    </StackPanel>
                </RelativePanel>
            </StackPanel>
            <StackPanel 
                        x:Name="InsideFrame" >
                <ScrollViewer  
                            BorderBrush="Gray"
                            BorderThickness="0.4,0,0,0" 
                            VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock 
                                Text="Your Post"
                                FontSize="20"
                                HorizontalAlignment="Left"
                                Margin="50,20,50,20"
                                Foreground="{ThemeResource TextColor}"/>
                    <TextBlock 
                                x:Name="NoPost"
                                Text="No post is found from you" 
                                Margin="70,300,20,20" 
                                Width="450"     
                                FontSize="20"
                                Foreground="{ThemeResource TextColor}"
                                HorizontalAlignment="Stretch"/>
                    <ListView 
                              x:Name="My_Post"
                              MaxWidth="540"
                              ItemsSource="{x:Bind MyPost}" 
                              Grid.Column="1" 
                              ItemClick="MyPost_ItemClick" 
                              IsItemClickEnabled="True"
                              Foreground="{ThemeResource SystemAltMediumColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Post">
                                <StackPanel>
                                    <StackPanel>
                                        <RelativePanel>
                                            <Ellipse 
                                                    x:Name="Icon"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                     Margin="0,10,0,0"
                                                     Width="30" 
                                                     Height="30">
                                                <Ellipse.Fill>
                                                    <ImageBrush 
                                                            ImageSource ="/Assets/male-03.png" />
                                                </Ellipse.Fill>
                                            </Ellipse>
                                               
                                            <TextBlock 
                                                       x:Name="TitleCard"
                                                       RelativePanel.RightOf="Icon"
                                                       Text="{x:Bind PostTitle}"
                                                       FontSize="18"
                                                       Margin="8,10,0,0"/>
                                            <TextBlock 
                                                       x:Name="ContentCard"
                                                       RelativePanel.Below="TitleCard"
                                                       RelativePanel.RightOf="Icon"
                                                       Text="{x:Bind PostContent}"
                                                       FontSize="15"                                                        
                                                       TextWrapping="Wrap"
                                                       TextTrimming="CharacterEllipsis"
                                                       Height="28"
                                                       Margin="10,1,3,1"
                                                       Foreground="{ThemeResource TertiaryColor}"/>
                                            <TextBlock 
                                                       x:Name="TimeCard"
                                                       RelativePanel.Below="ContentCard"
                                                       RelativePanel.RightOf="Icon"
                                                       Margin="10,1,3,1"
                                                       Text="{x:Bind CreatedTime.ToShortDateString()}"
                                                       FontSize="10" />
                                            <Line
                                                  RelativePanel.Below="TimeCard"
                                                  Style="{ThemeResource ColorPickerBorderStyle}"
                                                  X2="500"
                                                  Margin="1"/>
                                        </RelativePanel>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
            <StackPanel  
                x:Name="Option"
                BorderBrush="Gray" 
                BorderThickness="0.4,0,0,0">
                <StackPanel
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20,20,20,20">
                    <HyperlinkButton 
                        x:Name="Edit"
                        Content="Edit Post"
                        Click="Edit_Click" 
                        Foreground="MediumSlateBlue"/>
                    <HyperlinkButton 
                        x:Name="Delete"  
                        Content="Delete Post"
                        Click="Delete_Click"
                        Foreground="MediumSlateBlue" />
                    <TextBlock 
                               x:Name="SampleText"
                               Text="SocioTalk enables you to post your feed and you can manage your feed in account page. Feel free to use it to have a Secure and Safety Communication."
                               TextWrapping="WrapWholeWords"
                               Width="300"
                               Foreground="{ThemeResource TextColor}"
                               Margin="0,50,0,0"/>
                   
                </StackPanel>
                    <ScrollViewer 
                                  VerticalScrollBarVisibility="Auto"
                                  MaxWidth="400"
                                  Height="620"
                                  Margin="20">
                        
                        <TextBlock 
                                    x:Name="PostContent"
                                    Margin="5"
                                    FontWeight="SemiBold"
                                    TextAlignment="Justify"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"/>
                    </ScrollViewer>
                    <HyperlinkButton 
                                    x:Name="ViewPost" 
                                    Content="View full post" 
                                    Click="ViewPost_Click"
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>

</Page>