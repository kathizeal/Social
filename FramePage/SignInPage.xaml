<Page
    x:Class="Social.FramePage.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Social.FramePage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Grid HorizontalAlignment="Center" Margin="50,150,50,50"  Height="400" Width="400" VerticalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                    <TextBlock  
                               Text="SocioTalk" 
                               FontSize="40" 
                               FontWeight="Bold"                           
                               Foreground="BlueViolet"                     
                               Margin="90,0,0,0"/>
                    <TextBlock
                                Text="Connect in to feel Safe and Secure"
                                Margin="90,0,0,0"
                                Foreground="black"          
                                />

                </StackPanel>
                <Grid Grid.Row="1" >
                    <StackPanel>
                        <Ellipse
                            Margin="20,20,20,0"
                            Height="150" Width="150">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/plus--V1.png" />

                            </Ellipse.Fill>

                        </Ellipse>
                        <TextBlock Text="CurrentUser"
                                   Foreground="Black"
                                   FontSize="28" HorizontalAlignment="Center" Height="44">

                        </TextBlock>

                    </StackPanel>

                </Grid>
            </Grid>



        </StackPanel>
        <Grid Grid.Column="1">
            <RelativePanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Grid Name="GRID" Height="250" Width="310" Background="LightCyan" CornerRadius="10" >
                <StackPanel>
                    <TextBox Width="300" PlaceholderText="USERID"
                             Height="40" HorizontalAlignment="Center" CornerRadius="10" Margin="5"/>
                    <PasswordBox Width="300" PlaceholderText="password" IsPasswordRevealButtonEnabled="True"
                                 PasswordRevealMode="Peek"
                             Height="40" HorizontalAlignment="Center" CornerRadius="10"/>
                    <Button Content="Sign in" Foreground="Black" HorizontalAlignment="Center" CornerRadius="20"  Width="150" Background="DarkBlue"></Button>
                    <HyperlinkButton Content="Forgot password" FontSize="15" HorizontalAlignment="Center"/>
                    <TextBlock Text="______________________" HorizontalAlignment="Center"   Foreground="black"></TextBlock>
                    <HyperlinkButton Content="Need any help ?" FontSize="15" HorizontalAlignment="Center"/>
                </StackPanel>

            </Grid>
                <HyperlinkButton Name="CreateAccButton"   RelativePanel.Below="GRID" HorizontalAlignment="Center" Content="Create Account" FontSize="20" Foreground="Blue"/>
                <TextBlock RelativePanel.Below="GRID" RelativePanel.RightOf="CreateAccButton"  Margin="5" Text=" to explore the World" Foreground="Black" FontSize="20" />





            </RelativePanel>
        </Grid>
    </Grid>
</Page>
