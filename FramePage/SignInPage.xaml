<Page
    x:Class="Social.FramePage.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Social.FramePage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        

    <Grid>
        <Image Source="/Assets/Frontcover.jpg" Stretch="Fill"/>
        <ScrollViewer>
            <Grid Name="InDisplay"
                  Background="LightGray"
                  CornerRadius="20">
                     <Grid.RowDefinitions>
                           <RowDefinition   Height="auto"/>
                           <RowDefinition Height="auto"/>
                     </Grid.RowDefinitions>              

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Name="IntroPart" >
                            
                
                            <StackPanel Name="IntroPartStack"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                <TextBlock
                                        Text="SocioTalk" 
                                        FontSize="40" 
                                        FontWeight="Bold"                           
                                        Foreground="BlueViolet"                     
                                        Margin="0,0,0,0"/>
                                <TextBlock
                                        Text="Connect in to feel Safe and Secure"
                                        Margin="0,0,0,0"
                                        Foreground="black"/>

                                <Ellipse
                                        Margin="20,0,20,0"
                                        Height="150"
                                        Width="150">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="/Assets/plus--V1.png" />
                                        </Ellipse.Fill>

                                </Ellipse>
                                <TextBlock Text="Quick Sign in"
                                           Foreground="Black"
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           Height="44" 
                                           Margin="0,0,0,20"/>
                                <HyperlinkButton x:Name="SignUpButton" 
                                            Content="Click Here to Create a new Account"
                                                 FontSize="14" 
                                                 Foreground="Blue" 
                                                 Margin="0,0,0,20"
                                                 Click="HyperlinkButton_Click" />
                    </StackPanel>
                       
                    </Grid>
                    <Grid Name="SignInPart"  Width="300" Height="300" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBox x:Name="UserIdBlock"
                                     Width="250"
                                     PlaceholderText="User-Id" 
                                     FontSize="20"
                                     Height="40"
                                     HorizontalAlignment="Center" 
                                     CornerRadius="10" 
                                     Margin="5"/>
                            <PasswordBox x:Name="PasswordBlock"   
                                         Width="250" 
                                         PlaceholderText="password" 
                                         IsPasswordRevealButtonEnabled="True"
                                         PasswordRevealMode="Peek"  
                                         FontSize="20"
                                         Height="40" 
                                         HorizontalAlignment="Center" 
                                         CornerRadius="10"/>
                            <Button Content="Sign in" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    CornerRadius="20" 
                                    Margin="5"  
                                    Width="150" 
                                    Background="Blue"
                                    Click="Button_Click"
                                    FontSize="20"/>
                            <HyperlinkButton Content="Forgot password" 
                                             FontSize="10" 
                                             HorizontalAlignment="Center"/>
                            <TextBlock Text="______________________" 
                                       HorizontalAlignment="Center"   
                                       Foreground="black"/>
                            <HyperlinkButton Content="Need any help ?" 
                                             FontSize="10" 
                                             HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Grid>      
            </Grid>
        </ScrollViewer>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InDisplay.(Margin)" Value="20"/>
                        <Setter Target="IntroPart.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="SignInPart.(Grid.Row)" Value="1"/>
                        <Setter Target="SignInPart.(Grid.ColumnSpan)" Value="2"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>                        
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InDisplay.(Margin)" Value="200,200,200,200"/>
                        <Setter Target="IntroPart.(Grid.Column)" Value="0"/>
                        <Setter Target="SignInPart.(Grid.Column)" Value="1"/>
                        <Setter Target="IntroPartStack.(Margin)" Value="0,100,0,100"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
